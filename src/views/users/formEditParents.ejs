                <div class="text-danger">
                    <%= errors.paisDeResidencia.msg %>
                </div>
            <%} %>
            
        </select>
        
          
    </div>

    <div class="control-formulario">
        <label>Ciudad de residencia</label>
        <select name="ciudad_de_residencias_id" class="control" value="<%= editUsers.ciudad_de_residencias_id%>">
           
           <option value="1">Buenos aires</option>
           <option value="2">Santa Fe</option>
           <option value="3">Rosario</option>
           <option value="4">Mendoza</option>
           <option value="5">Mar de plata</option>
           <option value="6">La Plata</option>
         
       </select>
   </div>
    
    <div class="control-formulario">
        <label>Dirección</label>
        <input type="text" name="direccion" class="control"  value="<%= editUsers.direccion%>" >
        <% if(locals.errors && errors.direccion){%>
            <div class="text-danger">
                <%= errors.direccion.msg %>
            </div>
        <%} %>
    </div>
    
    <div class="control-formulario">
        <label>Número de Contacto</label>
        <input type="text" name="movil" class="control" value="<%= editUsers.movil%>" >
        <% if(locals.errors && errors.movil){%>
            <div class="text-danger">
                <%= errors.movil.msg %>
            </div>
        <%} %>
      
    </div>

