        <div class="text-danger">
            <%= errors.img.msg %>
        </div>
    <%} %>

    </div>
     <div class="control-formulario">
        <label>Nombre</label>
        <input type="text" name="nombre" class="control" id="nombre" value="<%= editUsers.nombre%>" >
    <% if(locals.errors && errors.nombre){%>
        <div class="text-danger">
            <%= errors.nombre.msg %>
        </div>
    <%} %>
    
        
    </div>

